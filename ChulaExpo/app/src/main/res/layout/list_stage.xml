<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_weight="0.125"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="0.5"
                android:paddingTop="5dp"
                android:id="@+id/stage_tv_start_time"
                android:textColor="@color/black"
                android:gravity="bottom"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:text="08.00"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:layout_weight="0.5"
                android:paddingBottom="10dp"
                android:id="@+id/stage_tv_end_time"
                android:textColor="@color/white"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:textSize="15sp"
                android:text="08.30"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/stage_status_container"
            android:layout_weight="0.125"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/stage_status_container2"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/stage_iv_up_line"
                    android:layout_weight="0.25"
                    android:src="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="0dp" />
                <View
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="0dp"/>
                <ImageView
                    android:id="@+id/stage_iv_down_line"
                    android:layout_weight="0.25"
                    android:src="@color/white"
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="0dp" />
            </LinearLayout>

            <ImageView
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:layout_centerInParent="true"
                android:id="@+id/stage_iv_status_circle"
                android:src="@drawable/soon_event"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#d9d9d9"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="0.75"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0.9"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:lineSpacingExtra="-3dp"
                        android:paddingLeft="15dp"
                        android:id="@+id/stage_tv_name"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:text="Openingggggggggggggggggggggggggggggggg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:layout_weight="0.1"
                        android:layout_marginRight="5dp"
                        android:id="@+id/stage_iv_dropdown"
                        android:layout_gravity="center"
                        android:src="@drawable/down"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>