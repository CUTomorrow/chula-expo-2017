<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivHighlight"
        android:src="@drawable/highlight_vidva_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvHighlightLabel"
        style="@style/tvHighlightHeader"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_rounded_rectangle_pink"
        android:paddingBottom="0dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="0dp"
        android:text="HIGHLIGHT"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#5A000000"
        android:orientation="vertical"
        android:padding="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/tvHighlightTitle"
                fontPath="@string/font_bold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/highlight_title"
                android:maxLines="1"
                android:text="Vidva Highlight"
                android:ellipsize="end"
                android:textColor="@color/highlight_tab_text"
                android:textSize="@dimen/highlight_title"
                android:textStyle="bold" />
            <!--
            <TextView
                android:id="@+id/tvHighlightTime"
                android:text="13.00 - 15.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/tvHighlightHeader"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_alignParentRight="true" />
                -->
        </RelativeLayout>

        <TextView
            android:id="@+id/tvHighlightDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:text="นิทรรศการวิชาการทางวิศวกรรมครั้งที่ 17 (Nitad 17)"
            android:textColor="@color/highlight_tab_text"
            android:textSize="@dimen/highlight_desc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="14dp"></LinearLayout>

    </LinearLayout>

</RelativeLayout>