            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28dp"
            fontPath="@string/font_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Asst.Prof. Dr.Kultida Rojviboonchai\nTeerapat Vongsuteera (CP39)"
            android:lineSpacingExtra="-4sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            fontPath="@string/font" />

        <!-- Project Advisor -->

            <ImageView
                android:id="@+id/image9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/credit_advisor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Project Advisor"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28dp"
            fontPath="@string/font_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Asst.Prof. Dr.Athasit Surarerks"
            android:lineSpacingExtra="-4sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            fontPath="@string/font" />

        <!-- supported & sponsored -->

            <ImageView
                android:id="@+id/image10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/credit_support_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Supported By"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28dp"
            fontPath="@string/font_bold" />

            <ImageView
                android:id="@+id/image11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/credit_support" />

            <ImageView
                android:id="@+id/image12"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/credit_sponsor_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sponsored By"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="28dp"
            fontPath="@string/font_bold" />

            <ImageView
                android:id="@+id/image13"
                android:layout_width="wrap_content"
                android:layout_height="750dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/credit_sponsor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Thank you for using our application"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22dp"
                fontPath="@string/font" />

            <ImageView
                android:id="@+id/image14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/credit_post" />


        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/about_close"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:alpha="0.5"
        android:padding="15dp"
        android:src="@drawable/close_button" />

</RelativeLayout>
