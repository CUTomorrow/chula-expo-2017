<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:background="@color/blackHigherOverlay"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    fontPath="@string/font_bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:text="คุณสนใจ Event"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:text="การแสดงสาธิต หุ่นยนต์ดูดฝุ่น"
                fontPath="@string/font_bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="16 มีนาคม 2017 : 10.00 - 11.00"
                android:textAlignment="center"
                android:background="@drawable/shape_rounded_rectangle_stroke"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />

            <LinearLayout
                android:id="@+id/reserved_check_save"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/shape_rounded_rectangle"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/star"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:textColor="@color/white"
                    fontPath="@string/font_bold"
                    android:textSize="22dp"
                    android:text="บันทึก Event เข้าสู่ Favourite"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="40dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/normal_grey"
                android:textSize="16dp"
                android:text="แอพลิเคชันจะแจ้งเตือนก่อน Event เริ่มล่วงหน้า 15 นาที"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/normal_grey"
                android:textSize="16dp"
                android:text="คุณสามารถตรวจสอบ Event ที่สนใจทั้งหมดได้ใน"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/normal_grey"
                    android:textSize="16dp"
                    android:text="เมนู"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/ic_avatar"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/normal_grey"
                    android:textSize="16dp"
                    android:text="> Event ที่สนใจทั้งหมด"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/reserved_check_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/close_button"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:alpha="0.5"/>
    </RelativeLayout>

</FrameLayout>