<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="18dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStageId"
            fontPath="@string/font_bold"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="STAGE 1"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvStageLocation"
            fontPath="@string/font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:lineSpacingExtra="-3sp"
            android:text="หอประชุมจุฬา"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStageTitle"
            fontPath="@string/font_bold"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="จุฬาฯ กับ Innovation"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvStageTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08.30 - 09.30"
            android:textColor="@color/home_secondary_text_light"
            android:textSize="18dp" />

    </LinearLayout>
</LinearLayout>