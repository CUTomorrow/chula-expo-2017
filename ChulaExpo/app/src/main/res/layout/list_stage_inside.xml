                    android:src="@color/white"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <LinearLayout
                android:background="#d9d9d9"
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/stage_inside_tv_description"
                    android:text="A robotic vacuum cleaner, often called a robovac, is an autonomous robotic vacuum cleaner that has intelligent programming and a limited vacuum cleaning system. Some designs use spinning brushes to reach tight corners. Others combine a number of cleaningfeatures (mapping,UV sterilization, etc.)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="0.49"
