                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/border"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
