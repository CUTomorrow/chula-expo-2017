<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cuexpo.chulaexpo.fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/home_toolbar"
            android:background="@drawable/toolbar_bg"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:id="@+id/home_toolbar_title"
                android:text="@string/home_title"
                android:textSize="@dimen/title_toolbar_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center" />
         </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v4.view.ViewPager
                        android:id="@+id/vpHighlight"
                        android:layout_width="match_parent"
                        android:layout_height="210dp">
                    </android.support.v4.view.ViewPager>
                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/indicatorHighlight"
                        android:layout_width="match_parent"
                        android:layout_alignBottom="@id/vpHighlight"
                        android:layout_height="26dp"/>
                </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutStageHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tabbar_bg">
            <TextView
                android:id="@+id/tvStageHeaderTitle"
                android:text="ON STAGE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                style="@style/tvHighlightHeader" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <cuexpo.chulaexpo.view.ExpandableHeightListView
                android:id="@+id/lvStage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></cuexpo.chulaexpo.view.ExpandableHeightListView>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layoutActivityHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tabbar_bg">
            <TextView
                android:id="@+id/tvActivityHeaderTitle"
                android:text="SUGGESTED EVENTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                style="@style/tvHighlightHeader" />
        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <cuexpo.chulaexpo.view.ExpandableHeightListView
                    android:id="@+id/lvActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></cuexpo.chulaexpo.view.ExpandableHeightListView>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>
