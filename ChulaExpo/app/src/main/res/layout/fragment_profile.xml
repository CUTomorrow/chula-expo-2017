<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/light_grey"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/stage_toolbar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:id="@+id/stage_toolbar_title"
                android:text="My Profile"
                android:textSize="@dimen/title_toolbar_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardBackgroundColor="@color/profile_bg"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="131dp">

                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/iv_profile_temp"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:id="@+id/imageView4" />
                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/profile_bg_dark"
                            app:cardCornerRadius="4dp">
                            <Button
                                android:id="@+id/profile_edit_profile_btn"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:textSize="12sp"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="EDIT YOUR PROFILE"
                                android:background="@color/profile_bg_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"/>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/profile_name"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:text="Stepboom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:text="  "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/profile_surname"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:text="Paoliwat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                        <TextView
                            android:layout_marginTop="-5dp"
                            android:id="@+id/profile_email"
                            android:textColor="@color/white"
                            android:text="supakritboom@hotmail.com"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/profile_age"
                                android:textColor="@color/white"
                                android:text="Age 20"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textColor="@color/white"
                                android:text=" "
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/profile_gender"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:text="Gender Male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/profile_year"
                            android:textColor="@color/white"
                            android:text="Year 3"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="-5dp"
                            android:id="@+id/profile_school"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:text="Chulalongkorn University"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />




                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_weight="0.17"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <android.support.v7.widget.CardView
                    android:layout_weight="0.49"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/profile_bg"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/profile_favourite_btn"
                        android:gravity="center"
                        android:padding="10dp"
                        android:weightSum="1"
                        android:orientation="vertical"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="0.6"
                            android:src="@drawable/star"
                            android:scaleType="fitCenter"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:paddingLeft="3dp"
                            android:text="MY FAVOURITE"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                    <View
                        android:layout_weight="0.02"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                <android.support.v7.widget.CardView
                    android:layout_weight="0.49"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/profile_bg"
                    app:cardCornerRadius="4dp">
                    <LinearLayout
                        android:id="@+id/profile_reserved_btn"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="0.6"
                            android:src="@drawable/reserved"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:paddingLeft="3dp"
                            android:text="RESERVATION"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_weight="0.17"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <android.support.v7.widget.CardView
                    android:layout_weight="0.49"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/profile_bg"
                    app:cardCornerRadius="4dp">
                    <LinearLayout
                        android:id="@+id/profile_setting_btn"
                        android:gravity="center"
                        android:weightSum="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="0.6"
                            android:src="@drawable/star"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:paddingLeft="3dp"
                            android:text="FIX 1"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_weight="0.02"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <android.support.v7.widget.CardView
                    android:layout_weight="0.49"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/profile_bg"
                    app:cardCornerRadius="4dp">
                    <LinearLayout
                        android:id="@+id/profile_setting2_btn"
                        android:gravity="center"
                        android:weightSum="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="0.6"
                            android:src="@drawable/reserved"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:paddingLeft="3dp"
                            android:text="FIX 2"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_weight="0.17"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <android.support.v7.widget.CardView
                    android:layout_weight="0.49"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/profile_bg"
                    app:cardCornerRadius="4dp">
                    <LinearLayout
                        android:id="@+id/profile_faq_btn"
                        android:gravity="center"
                        android:weightSum="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="0.6"
                            android:src="@drawable/star"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:paddingLeft="3dp"
                            android:text="FAQ"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_weight="0.02"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <android.support.v7.widget.CardView
                    android:layout_weight="0.49"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/profile_bg"
                    app:cardCornerRadius="4dp">
                    <LinearLayout
                        android:id="@+id/profile_about_btn"
                        android:gravity="center"
                        android:weightSum="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_weight="0.6"
                            android:src="@drawable/reserved"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:paddingLeft="3dp"
                            android:text="About Chula Expo"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_weight="0.09"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardBackgroundColor="@color/profile_bg"
                app:cardCornerRadius="4dp">
                <Button
                    android:id="@+id/profile_logout_btn"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:background="@color/profile_bg"
                    android:textColor="@color/white"
                    android:text="LOG OUT"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>