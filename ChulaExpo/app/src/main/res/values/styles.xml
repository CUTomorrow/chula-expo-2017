<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#ff6d9a</item>
        <item name="colorAccent">@color/dark_grey</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="tvRegis">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#c1aef1</item>
    </style>
    <style name="etRegis">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
       <item name="android:paddingLeft">14dp</item>
    </style>
    <style name="tvHighlightHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">@string/font_bold</item>
    </style>
    <style name="tvHeaderDesc">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="buttonPrimaryStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/button_transparent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tvQR">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
